<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chenyuqi.colorbaby.MainActivity">
    <LinearLayout
        android:id="@+id/LinearLayout_above"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="320dip">
        <!-- 红色 -->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="红色"
            android:button="@null"
            android:foreground="@drawable/selector"
            android:background="#ff0000"
            android:id="@+id/checkBox_1"
            android:layout_weight="1"/>
        <!-- 橙色 -->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="橙色"
            android:button="@null"
            android:foreground="@drawable/selector"
            android:background="#FF7F00"
            android:id="@+id/checkBox_2"
            android:layout_weight="1" />
        <!-- 黄色 -->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="黄色"
            android:button="@null"
            android:foreground="@drawable/selector"
            android:background="#FFFF00"
            android:id="@+id/checkBox_3"
            android:layout_weight="1" />
        <!-- 绿色 -->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="绿色"
            android:button="@null"
            android:foreground="@drawable/selector"
            android:background="#00FF00"
            android:id="@+id/checkBox_4"
            android:layout_weight="1" />
        <!-- 青色 -->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="青色"
            android:button="@null"
            android:foreground="@drawable/selector"
            android:background="#00FFFF"
            android:id="@+id/checkBox_5"
            android:layout_weight="1"/>
        <!-- 蓝色 -->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="蓝色"
            android:button="@null"
            android:foreground="@drawable/selector"
            android:background="#0000FF"
            android:id="@+id/checkBox_6"
            android:layout_weight="1"/>
        <!-- 紫色 -->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="紫色"
            android:button="@null"
            android:foreground="@drawable/selector"
            android:background="#8B00FF"
            android:id="@+id/checkBox_7"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/LinearLayout_above">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000000"
            android:id="@+id/tv_add"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
